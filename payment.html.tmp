        /* Security Features */
        .security-info {
            background-color: #e8f5e8;
            border: 1px solid #4caf50;
            border-radius: 8px;
            padding: 15px;
            margin-top: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            background-color: rgba(76, 175, 80, 0.1);
            border-color: rgba(76, 175, 80, 0.3);
